<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/gray_white" android:endColor="@color/gray_white" 
        	android:angle="0"/>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
        
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/gray_white" android:endColor="@color/gray_white" 
        	android:angle="0"/>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" 
        	android:angle="0"/>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>

</selector>