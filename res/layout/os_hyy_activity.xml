<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/osprey_adphone_hn.cellcom.com.cn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <osprey_adphone_hn.cellcom.com.cn.widget.viewflow.ViewFlow
        android:id="@+id/guide"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </osprey_adphone_hn.cellcom.com.cn.widget.viewflow.ViewFlow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="3dip" >

        <osprey_adphone_hn.cellcom.com.cn.widget.viewflow.CircleFlowIndicator
            android:id="@+id/guide_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="5dip"
            app:activeColor="#ff0000"
            app:activeType="fill"
            app:circleSeparation="20dip"
            app:inactiveColor="@color/app_bg"
            app:inactiveType="fill"
            app:viewflow_radius="5dip" />
    </LinearLayout>

</FrameLayout>