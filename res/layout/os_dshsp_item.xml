<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/osprey_adphone_hn.cellcom.com.cn">

    <TextView
        android:id="@+id/tv_sc_type"
        android:background="@drawable/os_view_selector1"
        style="@style/app_textStyle2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="积分商城 >" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/os_img_default_icon"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_weight="1.0"
                android:gravity="top" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/app_textStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.0"
                    android:text="iphone6金属外壳" />

                <TextView
                    style="@style/app_small_textStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="积分:" />

                <TextView
                    android:id="@+id/tv_jifen"
                    style="@style/app_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="7800"
                    android:textColor="@color/deep_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/app_small_textStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="分类:" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/app_small_textStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.0"
                    android:text="银色拉丝" />

                <TextView
                    android:id="@+id/tv_sp_num"
                    style="@style/app_small_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="x 1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center_vertical|right" >

        <TextView
            android:id="@+id/tv_sp_totalnum"
            style="@style/app_small_textStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="共1件商品" />
        <TextView
            style="@style/app_small_textStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="实付：" />
        <TextView
            android:id="@+id/tv_sp_totaljf"
            style="@style/app_small_textStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_red"
            android:text="7800" />
        <TextView
            style="@style/app_small_textStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="积分" />
    </LinearLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/light_gray" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_margin="5dp">
        <osprey_adphone_hn.cellcom.com.cn.widget.fbutton.FButton 
            android:id="@+id/btn_qrfh"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            style="@style/app_medium_textStyle1"
            android:text="确认发货"
            app:shadowEnabled="false"
            app:buttonColor="@color/blue"
            app:cornerRadius="3dp"/>
    </LinearLayout>

</LinearLayout>